<html>
	<head>
		<title>Char Customize</title>
		<link rel="stylesheet" href="styles/customize.css">

		<script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
		<script src="/control/customize.js" type="text/javascript"></script>
	</head>

	<body>
		<div id="area"> 
			<%- include('./partials/nav.ejs') %>

			<div id="left">
				<div id="avatar">
					<img id="base" src="Assets/base.svg">
					<img    class="weapon" 
							id="<%= avatar.weapon.item_type %>" 
							src="Assets/Weapons/<%= avatar.weapon.file_name %>"
							data-name="<%= avatar.weapon.item_name%>"
						>
					<% if (avatar.hat !== null){ %>
					<img    class="head" 
							id="<%= avatar.hat.item_type %>" 
							src="Assets/Hats/<%= avatar.hat.file_name %>"
							data-name="<%= avatar.hat.item_name%>"
						>
					<% }else{ %>
					<img	class="head">
					<% } %>
				</div>
				<br>
				<input type="submit" id="save" value="Save Customizations" />
				<p id="response"></p>
			</div>

			<div class="gridbox">
				<h2>Weapons</h2>
				<div class="subbox" id="weaponbox">
					<% weapons.forEach(weapon => { %>
						<button class="item weaponslot" name="<%=weapon.item_name%>" id="<%=weapon.item_type%>">
							<img src="Assets/Weapons/<%=weapon.file_name%>"/>
						</button>
					<% }) %>
				</div>
				<br>
				<div class="divider"></div>
				<br>
				<h2>Hats</h2>
				<div class="subbox" id="hatbox">
					<% heads.forEach(head => { %>
						<button class="item headslot" name="<%=head.item_name%>" id="<%=head.item_type%>">
							<img src="Assets/Hats/<%=head.file_name%>"/>
						</button>
					<% }) %>
					
					<br> <button class="item headslot" id="unequip_hat">None</button>
				</div>
			</div>
		</div>
	</body>
</html>