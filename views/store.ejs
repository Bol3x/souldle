<html>

<head>
	<title>Souldle Store Page</title>
	<meta name=”description” content=”CharacterPage”>
	<meta name=”keyword” content="store, page, items">
	
	<link rel="stylesheet" href="/public/styles/storestyles.css">

	<script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
	<script src="/public/scripts/storepage.js"></script>
</head>

<body>
	<%- include('./partials/nav.ejs') %>

	<div class="entirepage">
		<div class="break"></div>
		<div class="header">
			<h1 id="store">Store</h1>
			<!--- TODO: obtain soulcount from database -->
			<h1 id="soulcount">Souls: <%=souls%></h1>
		</div>
		<div class="break"></div>
		<div class="gridbox">
			<div class="row" id="weapons">
				<h1 class="itemheader">Weapons</h1>
				<%weapons.forEach(weapon =>{%>
					<button class="item" id="<%=weapon.item_name%>" data-cost="<%=weapon.cost%>"
						>
						<img src="/public/asset/Weapons/<%=weapon.file_name%>" />
					</button>
				<%})%>
			</div>
			<br><div class="divider"></div>
			<div class="row" id="hats">
				<h1 class="itemheader">Headgear</h1>
				<%heads.forEach(head =>{%>
					<button class="item" id="<%=head.item_name%>" 
						data-name="<%=head.item_name%>" data-cost="<%=head.cost%>"
						>
						<img src="/public/asset/Hats/<%=head.file_name%>" />
					</button>
				<%})%>
			</div>
		</div>
		<div class="break"></div>
			<%- include('./partials/purchase.ejs') %>
	</div>
</body>

</html>