<html>
<head>
	<title> Souldle </title>
	<link rel="stylesheet" href="/public/styles/gamepage.css">

	<script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
	<script src="/public/scripts/game.js"></script>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
	<%- include('./partials/helpmodal.ejs') %>

	<div id="content">
		<div class="Bossbox">
			<div id="skullhead"><img src="/public/asset/Boss/SkeletonHead.svg" alt="Skull" width="156" height="204"></div>
			<div id="hands">
				<div id="righthand">
					<img src="/public/asset/Boss/SkelHandRight.svg" alt="RH" width="120" height="110">
				</div>
				<div id="lefthand">
					<img src="/public/asset/Boss/SkelHandLeft.svg" alt="LH" width="120" height="110">
				</div>
			</div>
		</div>
		<div id="avatar">
					<% if (avatar !== null){ %>
					<img id="base" src="/public/asset/base.svg">
					<img    class="weapon" 
							id="<%= avatar.weapon.item_type %>" 
							src="/public/asset/Weapons/<%= avatar.weapon.file_name %>"
							data-name="<%= avatar.weapon.item_name%>"
						>
					<% if (avatar.hat !== null){ %>
					<img    class="head" 
							id="<%= avatar.hat.item_type %>" 
							src="/public/asset/Hats/<%= avatar.hat.file_name %>"
							data-name="<%= avatar.hat.item_name%>"
						>
					<% }else{ %>
					<img	class="head">
					<% } %>
					<% }else{ %>
					<img id="base" src="/public/asset/base.svg">
					<img    class="weapon" 
							id="shorthandle" 
							src="/public/asset/Weapons/sword.svg"
							data-name="sword"
						>
					<img	class="head">
					<% } %>
				</div>
		<div id="errormsg"></div>
		<div class="divider"></div>
		<div class="breakdiv"></div>

		<div class="playbox">
			<div class="iconbar" id="message">
				<div class="iconbox" id="msg1"></div>
				<div class="iconbox" id="msg2"></div>
				<div class="iconbox" id="msg3"></div>
				<div class="iconbox" id="msg4"></div>
				<div class="iconbox" id="msg5"></div>
			</div>
			<div class="divider" style="background-color:aquamarine"></div>
			<div class="breakdiv"></div>
			<div class="iconbar" id="choice">
				<div class="iconbox" id="c1"></div>
				<div class="iconbox" id="c2"></div>
				<div class="iconbox" id="c3"></div>
				<div class="iconbox" id="c4"></div>
				<div class="iconbox" id="c5"></div>
			</div>
		</div>

		<div class="divider"></div>
		<div class="breakdiv"></div>

		<div class="actionbox">
			<div class="actions">
				<button class="button" id="a"> <img src="/public/asset/Icons/AttackIcon.svg" alt="Attack" width="100"
						height="100"> </button>
				<button class="button" id="b"> <img src="/public/asset/Icons/DefendIcon.svg" alt="Defend" width="100"
						height="100"> </button>
				<button class="button" id="c"> <img src="/public/asset/Icons/DodgeIcon.svg" alt="Dodge" width="100"
						height="100"> </button>
				<button class="button" id="d"> <img src="/public/asset/Icons/MagicIcon.svg" alt="Magic" width="100"
						height="100"> </button>
				<button class="button" id="e"> <img src="/public/asset/Icons/PotionIcon.svg" alt="Potion" width="100"
						height="100"> </button>
			</div>
		</div>

		<div class="divider"></div>
		<div class="breakdiv"></div>
	</div>
</body>

</html>
