<html>

<head>
	<title>Souldle Store Page</title>
	<meta name=”description” content=”CharacterPage”>
	<meta name=”keyword” content="store, page, items">
	<meta name=”author” content=”JPMP”>
	
	<link rel="stylesheet" href="styles/storestyles.css">

	<script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>
</head>

<body>
	<%- include('./partials/nav.ejs') %>

	<div class="entirepage">
		<div class="break"></div>
		<div class="header">
			<h1 id="store">Store</h1>
			<!--- TODO: obtain soulcount from database -->
			<h1 id="soulcount">Souls:<%=souls%></h1>
		</div>
		<div class="break"></div>
		<div class="gridbox">
			<div class="row" id="weapons">
				<h1 class="itemheader">Weapons</h1>
				<%weapons.forEach(weapon =>{%>
					<button class="item" id="<%=weapon.item_name%>">
						<img src="<%=weapon.img_link%>" />
					</button>
				<%})%>
			</div>
			<br><div class="divider"></div>
			<div class="row" id="hats">
				<h1 class="itemheader">Headgear</h1>
				<%heads.forEach(head =>{%>
					<button class="item" id="<%=head.item_name%>">
						<img src="<%=head.img_link%>" />
					</button>
				<%})%>
			</div>
		</div>
		<div class="break"></div>
	</div>
</body>

</html>