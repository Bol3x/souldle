<div id="avatar">
	<img id="base" src="Assets/base.svg">
	
	<img    class="weapon" 
			id="<%= avatar.weapon.item_type %>" 
			src="Assets/Weapons/<%= avatar.weapon.file_name %>"
		>
	<% if (avatar.hat !== null){ %>
	<img    class="head" 
			id="<%= avatar.hat.item_type %>" 
			src="Assets/Hats/<%= avatar.hat.file_name %>"
		>
	<% } %>
</div>