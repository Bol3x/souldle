<html>
	<head>
		<title>Home</title>
		<link rel="stylesheet" href="styles/home.css">

		<script src="https://code.jquery.com/jquery-3.6.0.min.js" type="text/javascript"></script>

	</head>

	<body>
        <%- include('./partials/nav.ejs') %>

		<div id="game">
			<div class="Bossbox">
				<div id="skullhead"><img src="Assets/Boss/SkeletonHead.svg" alt="Skull" width="156" height="204"></div>
				<div id="hands">
					<div id="righthand">
						<img src="Assets/Boss/SkelHandRight.svg" alt="LH" width="120" height="110">
					</div>
					<div id="lefthand">
						<img src="Assets/Boss/SkelHandLeft.svg" alt="RH" width="120" height="110">
					</div>
				</div>
			</div>

			<form action="/play"><input type="submit" value="PLAY"></form> <br>
			<div id="cooldown_timer">
				<p id="try">ATTEMPT: AVAILABLE</p>
				<p>RESETS IN: 0:59:59</p>
			</div>
		</div>

		<div class="break"><br></div>
		
		<div class="optionbox" id="customize">
			<h2>CUSOTMIZE</h2><br>

			<div id="avatar">
				<img src="Assets/avatar.svg" id="menu_avatar">
			</div>

			<div id="soulcount">
				<p>Souls: 9999</p>
			</div>

			<div id="store">
				<form action="/shop"><input type="submit" value="SHOP"></form>
			</div>
		</div>

		<div class="optionbox" id="socials">
			<h2>SOCIAL</h2><br>
			<div id="playersearch">
				<p>See other players' profiles</p>
				<form action="/search"><input type="submit" value="SEARCH"></form>
			</div>
		</div>


	</body>
</html>